{
  "name": "Docker und Kubernetes",
  
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "workspaceFolder": "/workspace",

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],

  "remoteUser": "root",

  "containerEnv": {
    "DISPLAY": "",
    "WAYLAND_DISPLAY": ""
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.venvPath": "/opt",
        "python.defaultInterpreterPath": "/opt/jupyter/bin/python"        
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  
  "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },    
  
  "runArgs": [
    "--security-opt=label=disable"
  ]
}
