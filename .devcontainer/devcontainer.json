{
	"name": "Docker und Kubernetes",
	
	"build": {
		"dockerfile": "./Dockerfile",
		"context": "."
	},
	
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind"
	],
	
	"containerEnv": {
		"DISPLAY": "",
		"WAYLAND_DISPLAY": ""
	},
	
	"customizations": {
		"vscode": {
			"settings": {
				"python.venvPath": "/opt",
				"python.defaultInterpreterPath": "/opt/jupyter/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	},
	
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
		},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000"
		}
	},
	
	"postCreateCommand":"cd /workspaces/duk && curl -L https://github.com/mc-b/duk/archive/refs/heads/master.tar.gz | tar xz --strip-components=3 duk-master/data/jupyter --exclude='*/'","remoteUser":"vscode",
	
	"runArgs": [
		"--security-opt=label=disable"
	]
}
